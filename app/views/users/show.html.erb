<div class="content-container">

  <div class="content-header-container">
    <h1><%= current_user.username %></h1>
  </div>

  <div class="jumbotron content-body-container">
    <table>
      <% current_user.public_attributes.each do |attribute, value| %>
        <tr>
          <td class="td-header"><%= "#{attribute}:" %></td>
          <td><%= value.to_s %></td>
        </tr>
      <% end %>
    </table>
  </div>

  <%= link_to("Edit account", edit_user_path(current_user), :class => "form-submit-btn") %>
  <%= button_to("Delete account", user_path(current_user), :method => :delete, :class => "form-submit-btn-red", :data => {:confirm => "Are you sure?"}) %>

</div>

<!-- CSS -->
<style type="text/css">
  html, body { height: 1000%;}
  body {
    background-image: url(https://www.solidbackgrounds.com/images/1920x1080/1920x1080-light-sky-blue-solid-color-background.jpg);
    background-repeat: no-repeat;
    background-position: top center;
    background-size: cover;}
</style>
