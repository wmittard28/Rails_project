<!DOCTYPE html>
<html lang="en">
    <head>
      <meta charset="utf-6">
       <!-- Latest compiled and minified CSS -->
       <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    </head>
    <body>

<% if logged_in? %>

  <div id="header-container" class="clearfix">

    <div id="header-logo-container">
      <div class="header-link"><%= link_to("JobAppU", home_path, :class => "logo-font") %></div>
    </div>

    <div id="header-navbar-container">
      <div class="header-link"><%= link_to("My Projects", job_applications_path(current_user)) %></div>
      &nbsp; &nbsp; &nbsp;
      <div class="header-link"><%= link_to("My Companies", companies_path(current_user)) %></div>
    </div>

    <div id="header-login-logout-container">
      <div class="header-link"><%= link_to("Account", user_path(current_user)) %></div>
      &nbsp; &nbsp; &nbsp;
      <div class="header-link"><%= link_to("Sign out", logout_path, :method => :delete) %></div>
    </div>

  </div>

<% else %>

  <div id="header-container" class="clearfix">

    <div id="header-logo-container">
      <div class="header-link"><%= link_to("JobAppU", root_path, :class => "logo-font") %></div>
    </div>

    <div id="header-login-logout-container">
      <div class="header-link"><%= link_to("Sign in", login_path) %></div>
      &nbsp;or&nbsp;
      <div class="header-link"><%= link_to("Sign up", signup_path) %></div>
    </div>

  </div>

<% end %>

<!-- Latest compiled and minified JavaScript -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</body>
</html>
